---
import { fetchAPI } from '../lib/api.js';
import Article from '../components/Article.astro';
import Layout from '../layouts/Layout.astro';

const data = await fetchAPI('posts?per_page=4');
---

<Layout>
  <article class="prose lg:prose-xl mx-auto">
    <h1>Articles archive</h1>
    <div>
      <ul>
        {
          data.map((post: any) => (
            <li>
              <Article post={post} />
            </li>
          ))
        }
      </ul>
    </div>
    <div class="text-center mt-20">
      <div>
        <a
          href="/page/"
          class="w-full bg-blue-500 px-4 py-3 rounded text-white font-semibold hover:bg-blue-600 transition duration-200 each-in-out"
          >See more articles</a
        >
      </div>
    </div>
  </article>
</Layout>
